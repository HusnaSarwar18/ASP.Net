@using DigitalNexus.Models.Entities
@code {
    [Parameter]
    public EventCallback OnProductAdded { get; set; }
    private Product NewProduct = new Product();

    private async Task AddProduct()
    {
        // Mocked logic for adding a product
        await OnProductAdded.InvokeAsync();
        Console.WriteLine($"Product {NewProduct.Name} added successfully!");
    }
}

<div class="mt-4">
    <h3>Add New Product</h3>
    <div>
        <label>Product Name:</label>
        <input class="form-control" @bind="NewProduct.Name" />
    </div>
    <div>
        <label>Price:</label>
        <input type="number" class="form-control" @bind="NewProduct.Price" />
    </div>
    <div>
        <label>Category:</label>
        <input class="form-control" @bind="NewProduct.Category" />
    </div>
    <div>
        <label>Description:</label>
        <textarea class="form-control" @bind="NewProduct.Description"></textarea>
    </div>
    <button class="btn btn-success mt-3" @onclick="AddProduct">Add Product</button>
</div>
