@page "/login"
@inject NavigationManager NavManager

<h2 class="text-center mt-4">Login</h2>

<div class="container mt-4">
    <div class="form-group">
        <label for="email">Email:</label>
        <input id="email" type="email" class="form-control" @bind="Email" />
    </div>
    <div class="form-group">
        <label for="password">Password:</label>
        <input id="password" type="password" class="form-control" @bind="Password" />
    </div>
    <button class="btn btn-primary mt-3" @onclick="HandleLogin">Login</button>
</div>

@code {
    private string Email;
    private string Password;

    private void HandleLogin()
    {
        if (Email == "admin@example.com")
        {
            NavManager.NavigateTo("/admin/dashboard");
        }
        else if (Email.Contains("seller"))
        {
            NavManager.NavigateTo("/seller/dashboard");
        }
        else
        {
            NavManager.NavigateTo("/products");
        }
    }
}
