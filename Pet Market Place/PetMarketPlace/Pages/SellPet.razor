@page "/SellPet"
@inject NavigationManager manager

<PageTitle>Sell a Pet</PageTitle>

<div class="container mt-5 d-flex justify-content-center">
    <div class="card">
        <div class="card-body">
            <EditForm Model="@SelectedPet" OnValidSubmit="@HandleSubmit">

                <div class="form-check">
                    <InputRadioGroup @bind-Value="@SelectedPet" class="form-check-input">
                        <InputRadio class="form-check-input" Value="@CatType" id="catChoice" />
                        <label class="form-check-label" for="catChoice">Sell a Cat</label><br />
                        <InputRadio class="form-check-input" Value="@DogType" id="dogChoice" />
                        <label class="form-check-label" for="dogChoice">Sell a Dog</label>
                    </InputRadioGroup>
                </div>
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    string SelectedPet = "";
    string CatType = "Cat";
    string DogType = "Dog";

    private void HandleSubmit()
    {
        if (SelectedPet == "Cat")
            manager.NavigateTo("/CatSpecification");
        else if (SelectedPet == "Dog")
            manager.NavigateTo("/DogSpecification");
    }
}

<style>
    body {
        background-color: #f0f2f5;
        font-family: 'Arial', sans-serif;
    }

    .card {
        border-radius: 10px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        background-color: #ffffff;
        padding: 20px;
        margin: 20px;
    }

    .card-header {
        background-color: #007bff;
        color: #ffffff;
        border-radius: 10px 10px 0 0;
        padding: 10px;
    }

    .card-body {
        padding: 20px;
    }

    .form-check-input:checked {
        background-color: #007bff;
        border-color: #007bff;
    }

    .form-check-label {
        font-weight: 600;
        font-size: 1.1rem;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        transition: background-color 0.3s, border-color 0.3s;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004085;
    }
</style>
